{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "baseUrl": "./src",
        "lib": [
            "es2015",
            "DOM"
        ],
        "paths": {
            "@modules/*": [
                "modules/*"
            ],
            "@config/*": [
                "config/*"
            ],
            "@shared/*": [
                "shared/*"
            ],
            "@errors/*": [
                "errors/*"
            ],
            "@utils/*": [
                "utils/*"
            ]
        },
        "typeRoots": [
            "./src/types",
            "node_modules/@types"
        ],
        "types": [
            "jest",
            "node"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    }
}